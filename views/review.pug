extends base 

block content
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Leave review for #{matchedBooking}
            form.form.form--review
                input(type="hidden" id="tour" name="tour" value=tourId)
                input(type="hidden" id="user" name="user" value=userId)
                input(type="hidden" id="slug" name="slug" value=slug)
                .form__group
                    label.form__label(for='review') Your Review
                    textarea#review.form__input(rows='5' placeholder='Your review', required)
                .form__group.ma-bt-md
                    label.form__label(for='rating') Rating
                    select#rating.form__input(name="rating" required) 
                        option(value="5") 5
                        option(value="4") 4
                        option(value="3" selected) 3
                        option(value="2") 2
                        option(value="1") 1
                .form__group
                    button.btn.btn--green Leave a Review